@model ThayThuan_MVC.NguoiDung

@{
    ViewBag.Title = "Details";
}

<div class="modal" style="position: relative;display: block;z-index: 0;overflow-y: hidden;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detail</h5>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">User Name</th>
                                <th>@Model.UserName</th>
                            </tr>
                            <tr>
                                <th scope="col">Password</th>
                                <th>@Model.Password</th>
                            </tr>
                            <tr>
                                <th scope="col">Full Name</th>
                                <th>@Model.HoTen</th>
                            </tr>
                            <tr>
                                <th scope="col">Phone Number</th>
                                <th>@Model.SoDienThoai</th>
                            </tr>
                            <tr>
                                <th scope="col">Email</th>
                                <th>@Model.Email</th>
                            </tr>
                            <tr>
                                <th scope="col">Permission</th>
                                <th>@Model.Quyen.TenQuyen</th>
                            </tr>
                        </thead>
                    </table>
                </div>
                <br />
                <br />
                <br />

                <div class="modal-footer">
                    <a href="@Url.Action("Index", "NguoiDungs")" class="btn btn-default m-r-10">Close</a>
                    |
                    <a href="@Url.Action("Edit", "NguoiDungs", new { id = Model.ID })" class="btn btn-success m-r-10">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>
