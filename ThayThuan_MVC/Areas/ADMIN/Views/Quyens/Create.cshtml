@model ThayThuan_MVC.Quyen

@{
    ViewBag.Title = "Create";
}
<div class="modal" style="position: relative;display: block;z-index: 0;overflow-y: hidden;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Permission</h5>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenQuyen, "User Permission", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenQuyen, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MoTa, "Describe Permission", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.MoTa, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <br />
                        <div class="modal-footer">
                            <a href="@Url.Action("Index", "Quyens")" class="btn btn-default m-r-10">Close</a>
                            |
                            <button type="submit" value="Save" class="btn btn-warning">Create New Permission</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
