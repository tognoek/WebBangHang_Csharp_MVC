@model ThayThuan_MVC.Quyen

@{
    ViewBag.Title = "Delete";
}
<div class="modal" style="position: relative;display: block;z-index: 0;overflow-y: hidden;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detail</h5>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">ID Permission</th>
                                <th>@Model.ID</th>
                            </tr>
                            <tr>
                                <th scope="col">User Permission</th>
                                <th>@Model.TenQuyen</th>
                            </tr>
                            <tr>
                                <th scope="col">Describe Permission</th>
                                <th>@Model.MoTa</th>
                            </tr>
                        </thead>
                    </table>
                </div>

                <div class="modal-footer">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-actions no-color">
                            <a href="@Url.Action("Index", "Quyens")" class=" btn btn-default m-r-10">Close</a>
                            |
                            <button type="submit" class="btn btn-info m-r-10">
                                Delete
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
