@model ThayThuan_MVC.TheLoai

@{
    ViewBag.Title = "Details";
}

<div class="modal" style="position: relative;display: block;z-index: 0;overflow-y: hidden;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Detail</h5>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">ID Category</th>
                                <th>@Model.ID</th>
                            </tr>
                            <tr>
                                <th scope="col">User Category</th>
                                <th>@Model.TenTheLaoi</th>
                            </tr>
                        </thead>
                    </table>
                </div>

                <div class="modal-footer">
                    <a href="@Url.Action("Index", "TheLoais")" class="btn btn-default m-r-10">Close</a>
                    |
                    <a href="@Url.Action("Edit", "TheLoais", new { id = Model.ID })" class="btn btn-success m-r-10">Edit</a>
                </div>
            </div>
        </div>
    </div>
</div>
