@model ThayThuan_MVC.TheLoai

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

<div class="modal" style="position: relative;display: block;z-index: 0;overflow-y: hidden;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Create New Category</h5>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.LabelFor(model => model.TenTheLaoi, "User Category", htmlAttributes: new { @class = "control-label col-md-4" })
                            <div class="col-md-10">
                                @Html.EditorFor(model => model.TenTheLaoi, new { htmlAttributes = new { @class = "form-control" } })
                            </div>
                        </div>

                        <br />
                        <div class="modal-footer">
                            <a href="@Url.Action("Index", "TheLoais")" class="btn btn-default m-r-10">Close</a>
                            |
                            <button type="submit" value="Save" class="btn btn-warning">Create New Category</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
